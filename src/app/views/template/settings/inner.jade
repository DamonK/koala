ul#nav
	li.current(data-rel="#general_options") {{General}}

	// Compiler Navigation
	each compiler in compilers
		li(data-rel="#" + compiler.name + "_options")= compiler.display
	li(data-rel="#compass_options") Compass
	li(data-rel="#advanced_options") {{Advanced}}
	li(data-rel="#help_options") {{Help}}
	li(data-rel="#about_options") {{About}}

div#content
	// General options
	div#general_options
		h2 {{General}}
		p.selectitem.mb5 {{Language:}} 
			select#locales
				each language in languages
					option(value=language.code, name=language.code)= language.name
		label
			input#minimizeToTray(type="checkbox")
			span {{Minimize To Tray}}
		br
		label
			input#minimizeOnStartup(type="checkbox")
			span {{Minimize On Startup}}

		p.mt10 {{Filter:}}
			input#filter(type="text", placeholder="{{filter placeholder}}")

	// mixin checkbox
	mixin args_checkbox(option, compilerName, type)
		label
			input.compile_option(type="checkbox", id= compilerName + "_" + option.name, data-rel=compilerName, data-name=option.name, checked=option.value, data-type=type)
			span= option.display
		br

	// mixin text
	mixin args_text(option, compilerName, type)
		label
			span= option.display + ":"
			input.compile_option(type="text", id= compilerName + "_" + option.name, data-rel=compilerName, data-name=option.name, value=option.value, placeholder= option.placeholder, data-depend= option.depend, data-type=type)
		br

	// mixin droplist
	mixin args_droplist(option, compilerName, type)
		p.mb5= option.display + ': '
			select.compile_option(id= compilerName + "_" + option.name, data-rel=compilerName, data-name=option.name, data-type=type)
				each item in option.items
					option(value=item.value, selected=option.value === item.value)= item.text

	// compiler options
	each compiler in compilers
			div.hide(id=compiler.name + "_options")
				h2= compiler.display

				if compiler.options.length
					h3 {{Default Options}}
					div.optionbox
						each option in compiler.options
							if option.type === "checkbox"
								mixin args_checkbox(option, compiler.name, "options")

							if option.type === "text"
								mixin args_text(option, compiler.name, "options")

							if option.type === "droplist"
								mixin args_droplist(option, compiler.name, "options")

				if compiler.advanced
					h3 {{Advanced Settings}}
					div.optionbox
						each option in compiler.advanced
							if option.type === "checkbox"
								mixin args_checkbox(option, compiler.name, "advanced")

							if option.type === "text"
								mixin args_text(option, compiler.name, "advanced")

							if option.type === "droplist"
								mixin args_droplist(option, compiler.name, "advanced")

				h3 {{Libraries Version}}
				div.optionbox
					each lib in compiler.libraries
						| #{lib}
						br

				if compiler.maintainers
					h3 {{Maintainers}}
					div.optionbox
						a.externalLink(href=compiler.maintainers.web)= compiler.maintainers.name
						if compiler.maintainers.email
							|  &lt;#{compiler.maintainers.email}&gt;
						br
						| {{Project Website:}} 
						a.externalLink(href=compiler.maintainers.project)= compiler.maintainers.project

				if compiler.isExtension
					button.uninstall(data-rel=compiler.name) {{Uninstall This Extension}}

	// compass options
	div#compass_options.hide
		h2 Compass
		div.mt10 {{compass project configuration instructions}}


	// advanced options
	div#advanced_options.hide
		h2 {{Advanced}}
		p.optionbox
			label
				input.compile_option(type="checkbox", id="global_useCustomRuby", data-name="useCustomRuby", data-rel="global")
				span {{Use Custom Ruby}}
				br
			label
				span {{Use the Ruby executable at this path}}:
				input.compile_option(type="text", id="global_rubyCommandPath", placeholder="Default: ruby", data-name="rubyCommandPath", data-depend="useCustomRuby", data-rel="global")
		p.mt10
			button#openExtsFolder {{Open Extensions Folder}}

	// help options
	div#help_options.hide
		h2 {{Help}}
		p.mt10
			| {{Docs:}} 
			a#link_docs.externalLink(href="maintainers.docs")= maintainers.docs
			br
			| {{Bug Report:}} 
			a#link_issues.externalLink(href=maintainers.issues)= maintainers.issues

	// about options
	div#about_options.hide
		h2 {{About}}
		div#about
			| Copyright (c) 2013 
			a.externalLink(href=maintainers.web)= maintainers.name
			br
			
			| {{Project Website:}} 
			a#link_project.externalLink(href=maintainers.project)= maintainers.project
			br
			
			div#upgradetips
				p.update
					| {{new version available}}
					a#link_download.externalLink(href="#") {{Download Now}}
					| .
				p.noupdate {{This is the lastest version.}}

			| {{[@settings.html]Version:}} v
			span#koalaVersion= appVersion
			button#checkupgrade {{Check Upgrade}}
			span#upgradeloading {{Checking...}}
			br
			
			| {{Contributors:}} 
			span.contributors
				each people in maintainers.contributors
					a.externalLink(href=people.web)= people.name
			br

			if translator.name !== 'Official'
				| {{Translator:}}
				a.externalLink(href=translator.web)= translator.name
