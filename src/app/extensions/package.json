{
	"name": "__core_extension__",
	"description": "The core extension used in Koala.",
	"version": "1.0.0",
	"display": "Core Extension",

	"maintainers": {
		"name": "Official",
		"email": "",
		"web": "koala-app.com",
		"project": "http://github.com/oklai/koala"
	},

	"compilers": [
		{
			"name": "less",
			"display": "LESS",
			"main": "LessCompiler.js",

			"maintainers": {
				"name": "Ethan Lai",
				"email": "lain.z.q@gmail.com",
				"web": "http://oklai.name",
				"project": "http://github.com/oklai/koala"
			},

			"isExtension": true,

			"file_types": {
				"extension": "less",
				"output": "css",
				"icon": "../assets/img/filetypes/less.png",
				"category": "style",
				"watch": true
			},

			"options": [
				{
					"name": "lineComments",
					"display": "Line Comments",
					"type": "checkbox",
					"default": false
				},
				{
					"name": "debugInfo",
					"display": "Debug Info",
					"type": "checkbox",
					"default": false
				},
				{
					"name": "strictMath",
					"display": "Strict Math",
					"type": "checkbox",
					"default": true
				},
				{
					"name": "strictUnits",
					"display": "Strict Units",
					"type": "checkbox",
					"default": false
				},
				{
					"name": "outputStyle",
					"display": "Output Style",
					"type": "droplist",
					"items": [
						{
							"value": "",
							"text": "normal"
						},
						"compress",
						"yuicompress"
					],
					"default": ""
				}
			],

			"advanced": [
				{
					"name": "useCommand",
					"display": "Use the System LESS compiler",
					"type": "checkbox",
					"default": false
				},
				{
					"name": "commandPath",
					"display": "Use the LESS executable at this path",
					"type": "text",
					"default": "",
					"placeholder": "Default: lessc",
					"depend": "useCommand"
				}
			],

			"libs": "less@1.4.0"
		},
		{
			"name": "sass",
			"display": "Sass",
			"main": "SassCompiler.js",

			"file_types": [
				{
					"extension": "sass",
					"output": "css",
					"icon": "../assets/img/filetypes/sass.png",
					"category": "style",
					"watch": true
				},
				{
					"extension": "scss",
					"output": "css",
					"icon": "../assets/img/filetypes/scss.png",
					"category": "style",
					"watch": true
				}
			],

			"options": [
				{
					"name": "compass",
					"display": "Compass Mode",
					"type": "checkbox",
					"default": false
				},
				{
					"name": "lineComments",
					"display": "Line Comments",
					"type": "checkbox",
					"default": false
				},
				{
					"name": "debugInfo",
					"display": "Debug Info",
					"type": "checkbox",
					"default": false
				},
				{
					"name": "unixNewlines",
					"display": "Unix Newlines",
					"type": "checkbox",
					"default": false
				},
				{
					"name": "outputStyle",
					"display": "Output Style",
					"type": "droplist",
					"items": [
						"nested",
						"expanded",
						"compact",
						"compressed"
					],
					"default": "nested"
				}
			],

			"advanced": [
				{
					"name": "useSassCommand",
					"display": "Use the System Sass compiler",
					"type": "checkbox",
					"default": false
				},
				{
					"name": "sassCommandPath",
					"display": "Use the Sass executable at this path",
					"type": "text",
					"default": "",
					"placeholder": "Default: sass",
					"depend": "useSassCommand"
				},
				{
					"name": "useCompassCommand",
					"display": "Use the System Compass compiler",
					"type": "checkbox",
					"default": false
				},
				{
					"name": "compassCommandPath",
					"display": "Use the Compass executable at this path",
					"type": "text",
					"default": "",
					"placeholder": "Default: compass",
					"depend": "useCompassCommand"
				}
			],

			"libs": ["sass@3.2.9", "compass@0.12.2"]
		},
		{
			"name": "coffeescript",
			"display": "CoffeeScript",
			"main": "CoffeeScriptCompiler.js",

			"file_types": {
				"name": "coffeescript",
				"extension": "coffee",
				"output": "js",
				"icon": "../assets/img/filetypes/coffee.png",
				"category": "script",
				"watch": true
			},

			"options": [
				{
					"name": "bare",
					"display": "Bare",
					"type": "checkbox",
					"default": false
				},
				{
					"name": "literate",
					"display": "Literate",
					"type": "checkbox",
					"default": false
				}
			],

			"advanced": [
				{
					"name": "useCommand",
					"display": "Use the System CoffeeScript compiler",
					"type": "checkbox",
					"default": false
				},
				{
					"name": "commandPath",
					"display": "Use the CoffeeScript executable at this path",
					"type": "text",
					"default": "",
					"placeholder": "Default: coffee",
					"depend": "useCommand"
				}
			],

			"libs": "coffee-script@1.6.3"
		},
		{
			"name": "dust",
			"display": "Dust",
			"main": "DustCompiler.js",

			"maintainers": {
				"name": "Ziad Khoury",
				"email": "",
				"web": "https://github.com/zaygraveyard",
				"project": "http://github.com/oklai/koala"
			},

			"file_types": {
				"extension": "dust",
				"output": "jst",
				"icon": "../assets/img/filetypes/dust.png",
				"category": "template",
				"watch": true
			},

			"advanced": [
				{
					"name": "useCommand",
					"display": "Use the System Dust compiler",
					"type": "checkbox",
					"default": false
				},
				{
					"name": "commandPath",
					"display": "Use the Dust executable at this path",
					"type": "text",
					"default": "",
					"placeholder": "Default: dustc",
					"depend": "useCommand"
				}
			],

			"libs": "dustjs-linkedin@1.2.3"
		}
	]
}
