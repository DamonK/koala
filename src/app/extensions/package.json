{
	"name": "__core_extension__",
	"description": "The core extension used in Koala.",
	"version": "1.0.0",
	"display": "Core Extension",

	"maintainers": {
		"name": "Official",
		"email": "",
		"web": "koala-app.com",
		"project": "http://github.com/oklai/koala"
	},

	"compilers": [
		{
			"name": "less",
			"compiler_version": "1.4.0",
			"class_path": "LessCompiler.js",
			"file_types": {
				"name": "less",
				"extensions": "less",
				"icons": "../assets/img/filetypes/less.png",
				"output_extension": "css"
			},

			"use_system_command": false,

			"options": [
				{
					"type": "single",
					"name": "lineComments",
					"display": "line comments",
					"default": false
				},
				{
					"type": "single",
					"name": "debugInfo",
					"display": "debug info",
					"default": false
				},
				{
					"type": "single",
					"name": "strictMath",
					"display": "Strict Math",
					"default": true
				},
				{
					"type": "single",
					"name": "strictUnits",
					"display": "Strict Units",
					"default": false
				},
				{
					"type": "multiple",
					"name": "outputStyle",
					"display": "Output Style",
					"values": [
						{
							"value": "",
							"display": "normal"
						},
						"compress",
						"yuicompress"
					],
					"default": ""
				}
			]
		},
		{
			"name": "sass",
			"compiler_version": "3.2.9",
			"class_path": "SassCompiler.js",
			"file_types": {
				"name": "sass",
				"extensions": ["sass", "scss"],
				"icons": ["../assets/img/filetypes/sass.png", "../assets/img/filetypes/scss.png"],
				"output_extension": "css"
			},

			"use_system_command": false,

			"options": [
				{
					"type": "single",
					"name": "compass",
					"default": false
				},
				{
					"type": "single",
					"name": "lineComments",
					"display": "line comments",
					"default": false
				},
				{
					"type": "single",
					"name": "unixNewlines",
					"display": "unix newlines",
					"default": false
				},
				{
					"type": "single",
					"name": "debugInfo",
					"display": "debug info",
					"default": false
				},
				{
					"type": "multiple",
					"name": "outputStyle",
					"display": "Output Style",
					"values": [
						"nested",
						"expanded",
						"compact",
						"compressed"
					],
					"default": "nested"
				}
			]
		},
		{
			"name": "coffeescript",
			"compiler_version": "1.6.3",
			"class_path": "CoffeeScriptCompiler.js",
			"file_types": {
				"name": "coffeescript",
				"extensions": "coffee",
				"icons": "../assets/img/filetypes/coffee.png",
				"output_extension": "js"
			},

			"use_system_command": false,

			"options": [
				{
					"type": "single",
					"name": "bare",
					"default": false
				},
				{
					"type": "single",
					"name": "literate",
					"default": false
				}
			]
		},
		{
			"name": "dust",
			"compiler_version": "1.2.3",
			"class_path": "DustCompiler.js",
			"file_types": {
				"name": "dust",
				"extensions": "dust",
				"icons": "../assets/img/filetypes/dust.png",
				"output_extension": "jst"
			},

			"use_system_command": false
		}
	]
}